<section>
  <div id="author">
    <div class="bio">
      <h1><%= post_author(author).name %></h1>
      <% if post_author(author).twitter.present? %>
        <a href="https://twitter.com/<%= post_author(author).twitter %>">@<%= post_author(author).twitter %></a>
      <% end %>

      <hr>
    </div>
  </div>
</section>

